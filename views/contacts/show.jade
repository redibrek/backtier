extends ../layout

block content
    h1 Contact Details

    .panel.panel-primary
      .panel-heading  
        h3.panel-title #{contact.fname} #{contact.lname}
      .panel-body    
        label.control-label.col-sm-2 Email Address:
        .col-sm-10
        p #{contact.email}
        label.control-label.col-sm-2 Telephone Number:
        .col-sm-10
        p #{contact.phone}
        label.control-label.col-sm-2 Organisation:
        .col-sm-10
        p #{contact.organisation}
        label.control-label.col-sm-2 Unique ID:
        .col-sm-10
        p #{contact._id}
      .panel-footer
        .btn-group(role='group', aria-label='...')
          button.btn.btn-default(type='button', onclick="location.href='/contacts';") Show All
          button.btn.btn-default(type='button', onclick="location.href='/contacts/#{contact._id}/edit';") Edit
        .btn-group.pull-right
          form(action='/contacts/#{contact._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
            input(type='hidden',value='DELETE',name='_method')
            button.btn.btn-danger(type='submit') Delete
