extends ../layout

block content
    h2 Contacts Summary   
      .btn-group.pull-right
            button.btn.btn-default(type='button', onclick="location.href='/contacts/new';") New Contact      
    ul.list-group
        - each contact, i in contacts
            .panel.panel-primary
              .panel-heading
                h3.panel-title  
                  = contact.firstName
                  | 
                  = contact.lastName
              .panel-body            
                label.control-label.col-sm-2(for='email') Email Address:
                .col-sm-10
                p #{contact.email}
                label.control-label.col-sm-2(for='phone') Telephone Number:
                .col-sm-10
                p #{contact.phone}
                label.control-label.col-sm-2(for='organisation') Organisation:
                .col-sm-10
                p #{contact.organisation}
                label.control-label.col-sm-2(for='id') Unique ID:
                .col-sm-10
                p #{contact._id}
              .panel-footer                
                .btn-group(role='group', aria-label='...')
                  button.btn.btn-default(type='button', onclick="location.href='/contacts/#{contact._id}';") Detail
                  button.btn.btn-default(type='button', onclick="location.href='/contacts/#{contact._id}/edit';") Edit
                .btn-group.pull-right
                  form(action='/contacts/#{contact._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button.btn.btn-danger(type='submit') Delete
