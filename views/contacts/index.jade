extends ../layout

block content
    h1.
         #{title}
    ul
        - each contact, i in contacts
            li
                = contact.fname
                = contact.lname
                = contact.email
                = contact.phone
                = contact.organisation
                = contact._id
                form(action='/contacts/#{contact._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/contacts/#{contact._id}/edit') Edit
                p
                    a(href='/contacts/#{contact._id}') Show
