extends ../layout

block content
    h1.
         #{title}
    ul.list-group
        - each contact, i in contacts
            li.list-group-item
                | Name: 
                = contact.fname
                | 
                = contact.lname
                br 
                | Email Address: 
                = contact.email
                br
                | Phone: 
                = contact.phone
                br
                | Organisation: 
                = contact.organisation
                p                
                .btn-group(role='group', aria-label='...')
                  button.btn.btn-default(type='button', onclick="location.href='/contacts/#{contact._id}';", value='Go to Google') Detail
                  button.btn.btn-default(type='button', onclick="location.href='/contacts/#{contact._id}/edit';", value='Go to Google') Edit
                .btn
                  form(action='/contacts/#{contact._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button.btn.btn-default(type='submit') Delete
