extends ../layout 

block content
    h2 New Opportunity Form
  
    form#formAddopportunity.form-horizontal(name='addopportunity', method='post', action='/opportunities', novalidate)
      .panel.panel-primary
        .panel-heading  
          h3.panel-title Opportunity Information
        .panel-body    
          .form-group
            label.control-label.col-sm-2(for='name') Opportunity Name:
            .col-sm-10
              input#name.form-control(type='text', placeholder='e.g. Licence Deal', Name='name', class='form-control', required, data-required-msg='A name is required')
          .form-group
            label.control-label.col-sm-2(for='description') Description:
            .col-sm-10
              textarea#description.form-control(type='textarea', placeholder='enter some detail about the opportunity', Name='description', class='form-control', required, data-required-msg='A description is required')
          .form-group
            label.control-label.col-sm-2(for='name') Organisation
            .col-sm-10
              input#Organisation.form-control(type='text', placeholder='First Org', Name='Organisation', class='form-control', required, data-required-msg='Organisation is required')
          .form-group
            label.control-label.col-sm-2(for='primarycontactname') Primary Contact:
            .col-sm-10
              input#primarycontactname.form-control(type='text', Name='primarycontactname', class='form-control', required, data-required-msg='A contact name is required')
        .panel-footer
          .btn-group
              button.btn.btn-default(type='submit') Create

    script
        $('#formAddopportunity').kendoValidator({
        });
