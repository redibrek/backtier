extends ../layout

block content
    h1.
        opportunity ID #{opportunity._id}
    form(action='/opportunities/#{opportunity._id}/edit',method='post',name='updateopportunity',enctype='application/x-www-form-urlencoded')
        p Opportunity Name: 
            input#inputOppname(type="text", Value="#{opportunity.oppname}", name="oppname")
        p Description: 
            textarea#inputDescription(rows="4", Value="#{opportunity.description}", name="description")
        p Organisation Name: 
            input#inputOrgname(type="text", Value="#{opportunity.orgname}", name="orgname")
        p Primary Contact: 
            input#inputPrimaryContactName(type="text", Value="#{opportunity.primarycontactname}", name="primarycontactname")
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
